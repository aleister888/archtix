#!/bin/bash

battery(){
battery_level=$(cat /sys/class/power_supply/BAT$1/capacity)
if [ $1 == 0 ]; then
	icon_seq='^f10^^d^^c#A79983^'
else
	icon_seq='^c#928374^'
fi

if [ "$(cat /sys/class/power_supply/BAT$1/status)" = "Charging" ]; then
	baticon=""
else
	case $battery_level in
		[0-9])
			baticon="" ;;
		[0-1][0-9])
			baticon="" ;;
		[2-3][0-9])
			baticon="" ;;
		[4-5][0-9])
			baticon="" ;;
		[6-7][0-9])
			baticon="" ;;
		*)
			baticon="" ;;
	esac
fi

echo " $icon_seq$baticon $battery_level%"
}

echo  $([ -e /sys/class/power_supply/BAT0 ] && battery 0
[ -e /sys/class/power_supply/BAT1 ] && battery 1)
