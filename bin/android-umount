#!/bin/sh
# Script para desmontar dispositivos android

unmountandroid() {
# Elegir que dispositivo Android desmontar
chosen="$(awk '/simple-mtpfs/ {print $2}' /etc/mtab | dmenu -p "Que dispositivo desmontar?")" || exit 1

# Verificar si se seleccion√≥ un dispositivo
[ -z "$chosen" ] && exit

# Intentar desmontar el dispositivo seleccionado
if umount -l "$chosen"; then
	# Si el desmontaje es exitoso, mostrar una notificaci√≥n
	notify-send "ü§ñ Dispositivo Android $chosen desmontado"
else
	notify-send "ü§ñ Hubo un error al desmontar $chosen"
fi
}

# Llamar a la funci√≥n unmountandroid
unmountandroid
