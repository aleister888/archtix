#!/bin/sh

# Script para controlar la reproducción de la música

# Establecemos el reproductor
PLAYER="$(music-priority)"

[ -z "$PLAYER" ] && exit

playerctl --player="$PLAYER" "$1"

if [ "$1" != "play-pause" ]; then
	makoctl dismiss -a
	notify-send -i "$(music-metadata -c)" "$(music-metadata -t)"
fi
