#!/bin/sh

RESOLUTION=$(basename $(readlink "$HOME/.config/eww/dashboard.scss"))

if [ "$RESOLUTION" = "dashboard2160p.scss" ]; then
	HEIGHT=64; PADDING=12; ICONSPACING=6; DISTANCE=16
else
	HEIGHT=32; PADDING=12; ICONSPACING=6; DISTANCE=8
fi

if pgrep trayer; then
	killall trayer
else
	trayer \
		--height      $HEIGHT \
		--padding     $PADDING \
		--iconspacing $ICONSPACING \
		--distance    $DISTANCE \
		--edge left --distancefrom left \
		--widthtype request --heighttype pixel
fi
